    <script>
        // DOM Elements
        const uploadArea = document.getElementById('upload-area');
        const fileInput = document.getElementById('file-input');
        const fileInfo = document.getElementById('file-info');
        const fileName = document.getElementById('file-name');
        const fileSize = document.getElementById('file-size');
        const removeFileBtn = document.getElementById('remove-file');
        const processBtn = document.getElementById('process-btn');
        const resetBtn = document.getElementById('reset-btn');
        const resultsSection = document.getElementById('results');
        const downloadBtn = document.getElementById('download-btn');
        
        // Option toggles
        const enableOcr = document.getElementById('enable-ocr');
        const ocrAccuracyContainer = document.getElementById('ocr-accuracy-container');
        const ocrAccuracy = document.getElementById('ocr-accuracy');
        const ocrAccuracyValue = document.getElementById('ocr-accuracy-value');
        
        const enablePassword = document.getElementById('enable-password');
        const passwordFields = document.getElementById('password-fields');
        
        const enableWatermark = document.getElementById('enable-watermark');
        const watermarkFields = document.getElementById('watermark-fields');
        const watermarkOpacity = document.getElementById('watermark-opacity');
        const watermarkOpacityValue = document.getElementById('watermark-opacity-value');
        
        // File upload handling
        uploadArea.addEventListener('click', () => {
            fileInput.click();
        });
        
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = 'var(--primary)';
        });
        
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.style.borderColor = 'rgba(255, 255, 255, 0.2)';
        });
        
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = 'rgba(255, 255, 255, 0.2)';
            
            if (e.dataTransfer.files.length) {
                handleFileUpload(e.dataTransfer.files[0]);
            }
        });
        
        fileInput.addEventListener('change', () => {
            if (fileInput.files.length) {
                handleFileUpload(fileInput.files[0]);
            }
        });
        
        function handleFileUpload(file) {
            // Check if file is PDF
            if (!file.type.includes('pdf') && !file.name.toLowerCase().endsWith('.pdf')) {
                alert('Please upload a PDF file');
                return;
            }
            
            // Check file size (50MB limit)
            if (file.size > 50 * 1024 * 1024) {
                alert('File size exceeds 50MB limit');
                return;
            }
            
            // Display file info
            fileName.textContent = file.name;
            fileSize.textContent = formatFileSize(file.size);
            fileInfo.style.display = 'flex';
            processBtn.disabled = false;
            
            // Update results section with original size
            document.getElementById('original-size').textContent = formatFileSize(file.size);
        }
        
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            
            return parseFloat((bytes / Math.pow(k, i)).toFixed(1) + ' ' + sizes[i];
        }
        
        // Remove file
        removeFileBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            resetFileUpload();
        });
        
        function resetFileUpload() {
            fileInput.value = '';
            fileInfo.style.display = 'none';
            processBtn.disabled = true;
            resultsSection.style.display = 'none';
        }
        
        // Toggle OCR options
        enableOcr.addEventListener('change', () => {
            ocrAccuracyContainer.style.display = enableOcr.checked ? 'block' : 'none';
        });
        
        ocrAccuracy.addEventListener('input', () => {
            const value = parseInt(ocrAccuracy.value);
            const levels = ['Basic', 'Standard', 'Enhanced'];
            ocrAccuracyValue.textContent = levels[value - 1];
        });
        
        // Toggle password fields
        enablePassword.addEventListener('change', () => {
            passwordFields.style.display = enablePassword.checked ? 'block' : 'none';
        });
        
        // Toggle watermark fields
        enableWatermark.addEventListener('change', () => {
            watermarkFields.style.display = enableWatermark.checked ? 'block' : 'none';
        });
        
        watermarkOpacity.addEventListener('input', () => {
            watermarkOpacityValue.textContent = watermarkOpacity.value + '%';
        });
        
        // Reset all options
        resetBtn.addEventListener('click', () => {
            // Reset compression to default
            document.getElementById('comp-low').checked = true;
            
            // Reset OCR
            enableOcr.checked = false;
            ocrAccuracyContainer.style.display = 'none';
            ocrAccuracy.value = 2;
            ocrAccuracyValue.textContent = 'Standard';
            
            // Reset security
            enablePassword.checked = false;
            passwordFields.style.display = 'none';
            document.getElementById('pdf-password').value = '';
            document.getElementById('pdf-password-confirm').value = '';
            document.getElementById('restrict-printing').checked = false;
            document.getElementById('restrict-editing').checked = false;
            
            // Reset watermark
            enableWatermark.checked = false;
            watermarkFields.style.display = 'none';
            document.getElementById('watermark-text').value = '';
            watermarkOpacity.value = 50;
            watermarkOpacityValue.textContent = '50%';
            
            // Reset file upload
            resetFileUpload();
        });
        
        // Process PDF
        processBtn.addEventListener('click', () => {
            if (!fileInput.files.length) return;
            
            // Show processing state
            processBtn.disabled = true;
            processBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            
            // Simulate processing (in a real app, this would be an API call)
            setTimeout(() => {
                // Show results
                resultsSection.style.display = 'block';
                
                // Calculate random reduction between 30-70%
                const originalSize = fileInput.files[0].size;
                const reduction = 30 + Math.random() * 40;
                const newSize = originalSize * (1 - reduction/100);
                
                // Update results
                document.getElementById('new-size').textContent = formatFileSize(newSize);
                document.getElementById('reduction').textContent = Math.round(reduction) + '%';
                
                // Reset process button
                processBtn.disabled = false;
                processBtn.textContent = 'Process PDF';
                
                // Scroll to results
                resultsSection.scrollIntoView({ behavior: 'smooth' });
            }, 2000);
        });
        
        // Download button
        downloadBtn.addEventListener('click', () => {
            alert('In a real implementation, this would download the processed PDF');
        });
        
        // Initialize tooltips and other UI enhancements
        document.addEventListener('DOMContentLoaded', () => {
            // Animate feature cards on scroll
            const featureCards = document.querySelectorAll('.feature-card');
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = 1;
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, { threshold: 0.1 });
            
            featureCards.forEach(card => {
                card.style.opacity = 0;
                card.style.transform = 'translateY(20px)';
                card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                observer.observe(card);
            });
        });
    </script>
</body>
</html>
