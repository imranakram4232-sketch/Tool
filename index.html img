    <script>
        // DOM Elements
        const uploadArea = document.getElementById('upload-area');
        const fileInput = document.getElementById('file-input');
        const fileInfo = document.getElementById('file-info');
        const fileName = document.getElementById('file-name');
        const fileSize = document.getElementById('file-size');
        const removeFileBtn = document.getElementById('remove-file');
        const imagePreview = document.getElementById('image-preview');
        const originalImage = document.getElementById('original-image');
        const previewImage = document.getElementById('preview-image');
        const processBtn = document.getElementById('process-btn');
        const resetBtn = document.getElementById('reset-btn');
        const resultsSection = document.getElementById('results');
        const downloadBtn = document.getElementById('download-btn');
        
        // Compression options
        const compressionLevel = document.getElementById('compression-level');
        const compressionValue = document.getElementById('compression-value');
        const losslessCheckbox = document.getElementById('lossless');
        
        // Resize options
        const enableResize = document.getElementById('enable-resize');
        const resizeOptions = document.getElementById('resize-options');
        const imageWidth = document.getElementById('image-width');
        const imageHeight = document.getElementById('image-height');
        const preserveAspect = document.getElementById('preserve-aspect');
        
        // Enhancement options
        const sharpnessLevel = document.getElementById('sharpness-level');
        const sharpnessValue = document.getElementById('sharpness-value');
        const brightnessLevel = document.getElementById('brightness-level');
        const brightnessValue = document.getElementById('brightness-value');
        const contrastLevel = document.getElementById('contrast-level');
        const contrastValue = document.getElementById('contrast-value');
        const autoEnhance = document.getElementById('auto-enhance');
        
        // Background options
        const removeBg = document.getElementById('remove-bg');
        const bgOptions = document.getElementById('bg-options');
        const bgColorPicker = document.getElementById('bg-color-picker');
        const bgColorValue = document.getElementById('bg-color-value');
        
        // File upload handling
        uploadArea.addEventListener('click', () => {
            fileInput.click();
        });
        
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = 'var(--primary)';
        });
        
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.style.borderColor = 'rgba(255, 255, 255, 0.2)';
        });
        
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = 'rgba(255, 255, 255, 0.2)';
            
            if (e.dataTransfer.files.length) {
                handleFileUpload(e.dataTransfer.files[0]);
            }
        });
        
        fileInput.addEventListener('change', () => {
            if (fileInput.files.length) {
                handleFileUpload(fileInput.files[0]);
            }
        });
        
        function handleFileUpload(file) {
            // Check if file is an image
            if (!file.type.includes('image') && !file.name.toLowerCase().match(/\.(jpg|jpeg|png|gif|webp)$/)) {
                alert('Please upload an image file (JPG, PNG, WEBP, GIF)');
                return;
            }
            
            // Check file size (20MB limit)
            if (file.size > 20 * 1024 * 1024) {
                alert('File size exceeds 20MB limit');
                return;
            }
            
            // Display file info
            fileName.textContent = file.name;
            fileSize.textContent = formatFileSize(file.size);
            fileInfo.style.display = 'flex';
            processBtn.disabled = false;
            
            // Update results section with original size
            document.getElementById('original-size').textContent = formatFileSize(file.size);
            
            // Create preview
            const reader = new FileReader();
            reader.onload = function(e) {
                originalImage.src = e.target.result;
                previewImage.src = e.target.result;
                imagePreview.style.display = 'block';
                
                // Auto-set dimensions
                const img = new Image();
                img.onload = function() {
                    imageWidth.placeholder = this.width;
                    imageHeight.placeholder = this.height;
                };
                img.src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
        
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            
            return parseFloat((bytes / Math.pow(k, i)).toFixed(1) + ' ' + sizes[i];
        }
        
        // Remove file
        removeFileBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            resetFileUpload();
        });
        
        function resetFileUpload() {
            fileInput.value = '';
            fileInfo.style.display = 'none';
            imagePreview.style.display = 'none';
            processBtn.disabled = true;
            resultsSection.style.display = 'none';
            originalImage.src = '';
            previewImage.src = '';
        }
        
        // Update slider values in real-time
        compressionLevel.addEventListener('input', () => {
            compressionValue.textContent = compressionLevel.value + '%';
            updatePreview();
        });
        
        sharpnessLevel.addEventListener('input', () => {
            sharpnessValue.textContent = sharpnessLevel.value + '%';
            updatePreview();
        });
        
        brightnessLevel.addEventListener('input', () => {
            brightnessValue.textContent = brightnessLevel.value + '%';
            updatePreview();
        });
        
        contrastLevel.addEventListener('input', () => {
            contrastValue.textContent = contrastLevel.value + '%';
            updatePreview();
        });
        
        // Toggle options
        enableResize.addEventListener('change', () => {
            resizeOptions.style.display = enableResize.checked ? 'block' : 'none';
            updatePreview();
        });
        
        removeBg.addEventListener('change', () => {
            bgOptions.style.display = removeBg.checked ? 'block' : 'none';
            updatePreview();
        });
        
        // Background color picker toggle
        document.querySelectorAll('input[name="bg-option"]').forEach(radio => {
            radio.addEventListener('change', () => {
                bgColorPicker.style.display = radio.value === 'color' ? 'block' : 'none';
                updatePreview();
            });
        });
        
        // Preserve aspect ratio logic
        let lastChanged = 'width';
        imageWidth.addEventListener('input', () => {
            if (preserveAspect.checked && originalImage.naturalWidth && originalImage.naturalHeight) {
                lastChanged = 'width';
                const ratio = originalImage.naturalHeight / originalImage.naturalWidth;
                imageHeight.value = Math.round(imageWidth.value * ratio);
            }
            updatePreview();
        });
        
        imageHeight.addEventListener('input', () => {
            if (preserveAspect.checked && originalImage.naturalWidth && originalImage.naturalHeight) {
                lastChanged = 'height';
                const ratio = originalImage.naturalWidth / originalImage.naturalHeight;
                imageWidth.value = Math.round(imageHeight.value * ratio);
            }
            updatePreview();
        });
        
        preserveAspect.addEventListener('change', () => {
            if (preserveAspect.checked && originalImage.naturalWidth && originalImage.naturalHeight) {
                if (lastChanged === 'width' && imageWidth.value) {
                    const ratio = originalImage.naturalHeight / originalImage.naturalWidth;
                    imageHeight.value = Math.round(imageWidth.value * ratio);
                } else if (imageHeight.value) {
                    const ratio = originalImage.naturalWidth / originalImage.naturalHeight;
                    imageWidth.value = Math.round(imageHeight.value * ratio);
                }
            }
            updatePreview();
        });
        
        // Update preview image (simulated)
        function updatePreview() {
            if (!originalImage.src) return;
            
            // In a real implementation, this would use canvas or server processing
            // For demo purposes, we'll just apply some CSS filters
            let filter = '';
            
            // Apply brightness and contrast
            const brightness = parseInt(brightnessLevel.value) / 50; // Convert -50..50 to -1..1
            const contrast = (parseInt(contrastLevel.value) + 100) / 100; // Convert -50..50 to 0.5..1.5
            
            filter += `brightness(${1 + brightness}) contrast(${contrast})`;
            
            // Apply sharpness (simulated with blur)
            const sharpness = 1 - (parseInt(sharpnessLevel.value) / 100);
            filter += ` blur(${sharpness * 0.5}px)`;
            
            previewImage.style.filter = filter;
            
            // Simulate background removal
            if (removeBg.checked) {
                previewImage.style.backgroundColor = 'transparent';
                // In a real app, this would actually remove the background
            } else {
                previewImage.style.backgroundColor = '';
            }
        }
        
        // Reset all options
        resetBtn.addEventListener('click', () => {
            // Reset compression
            compressionLevel.value = 80;
            compressionValue.textContent = '80%';
            losslessCheckbox.checked = true;
            
            // Reset resize
            enableResize.checked = false;
            resizeOptions.style.display = 'none';
            imageWidth.value = '';
            imageHeight.value = '';
            preserveAspect.checked = true;
            document.getElementById('resize-bicubic').checked = true;
            
            // Reset enhancement
            sharpnessLevel.value = 50;
            sharpnessValue.textContent = '50%';
            brightnessLevel.value = 0;
            brightnessValue.textContent = '0%';
            contrastLevel.value = 0;
            contrastValue.textContent = '0%';
            autoEnhance.checked = false;
            
            // Reset background
            removeBg.checked = false;
            bgOptions.style.display = 'none';
            document.getElementById('bg-transparent').checked = true;
            bgColorPicker.style.display = 'none';
            
            // Reset file upload
            resetFileUpload();
            
            // Update preview if image exists
            if (originalImage.src) {
                previewImage.src = originalImage.src;
                previewImage.style.filter = '';
                previewImage.style.backgroundColor = '';
            }
        });
        
        // Process image
        processBtn.addEventListener('click', () => {
            if (!fileInput.files.length) return;
            
            // Show processing state
            processBtn.disabled = true;
            processBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
            
            // Show progress bar animation
            const progressBar = document.getElementById('progress-bar');
            let progress = 0;
            const progressInterval = setInterval(() => {
                progress += 5;
                progressBar.style.width = progress + '%';
                
                if (progress >= 100) {
                    clearInterval(progressInterval);
                    
                    // Show results
                    resultsSection.style.display = 'block';
                    
                    // Calculate random reduction between 30-80%
                    const originalSize = fileInput.files[0].size;
                    const reduction = 30 + Math.random() * 50;
                    const newSize = originalSize * (1 - reduction/100);
                    
                    // Update results
                    document.getElementById('new-size').textContent = formatFileSize(newSize);
                    document.getElementById('reduction').textContent = Math.round(reduction) + '%';
                    
                    // Reset process button
                    processBtn.disabled = false;
                    processBtn.textContent = 'Process Image';
                    
                    // Scroll to results
                    resultsSection.scrollIntoView({ behavior: 'smooth' });
                }
            }, 100);
        });
        
        // Download button
        downloadBtn.addEventListener('click', () => {
            alert('In a real implementation, this would download the processed image');
        });
        
        // Initialize tooltips and other UI enhancements
        document.addEventListener('DOMContentLoaded', () => {
            // Animate feature cards on scroll
            const featureCards = document.querySelectorAll('.feature-card');
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = 1;
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, { threshold: 0.1 });
            
            featureCards.forEach(card => {
                card.style.opacity = 0;
                card.style.transform = 'translateY(20px)';
                card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                observer.observe(card);
            });
        });
    </script>
</body>
</html>
